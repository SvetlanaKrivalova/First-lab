#include <iostream>
#include <cmath>
#include <locale.h>

using namespace std;

int main() {

    double V0 = 0.6;
    int    V  = 15;
    int    p0 = 860;
    double p;
    int    n  = 100;

    while (n < 50) {
        p = p0 * pow(V / (V + V0), n);
        cout << "n = " << n << "     " << "p = " << p << endl;
        n = n + 10;
    }
    do {
        p = p0 * pow(V / (V + V0), n);
        cout << "n = " << n << "     " << "p = " << p << endl;
        n = n + 50;
    } while (n < 350);
}
